<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/dialogTheme">

    <EditText

        android:id="@+id/bid1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bid2"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/bid2"
        android:ems="5"
        android:hint="bid "
        android:inputType="number"
        android:padding="10dp" />

    <EditText
        android:id="@+id/bid2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bid1"
        android:layout_centerHorizontal="true"
        android:ems="5"
        android:hint="bid "
        android:inputType="number"
        android:padding="10dp" />

    <EditText
        android:id="@+id/bid3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bid2"
        android:layout_alignStart="@+id/bid2"
        android:layout_below="@+id/bid2"
        android:ems="5"
        android:hint="bid "
        android:inputType="number"
        android:padding="10dp" />

    <EditText
        android:id="@+id/bid4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bid3"
        android:layout_alignStart="@+id/bid3"
        android:layout_below="@+id/bid3"
        android:ems="5"
        android:hint="bid "
        android:inputType="number"
        android:padding="10dp" />

    <TextView
        android:id="@+id/name1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/name2"
        android:layout_alignEnd="@+id/name2"
        android:layout_alignRight="@+id/name2"
        android:padding="10dp"
        android:text="name1"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/bid1"
        android:padding="10dp"
        android:text="name2"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/name3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/name4"
        android:layout_alignLeft="@+id/name2"
        android:layout_alignStart="@+id/name2"
        android:padding="10dp"
        android:text="name3"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/name4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/name3"
        android:layout_alignStart="@+id/name3"
        android:layout_below="@+id/bid3"
        android:padding="10dp"
        android:text="name4"
        android:textAppearance="?android:attr/textAppearanceMedium" />
</RelativeLayout>